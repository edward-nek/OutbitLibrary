{% extends 'base.html.twig' %}

{% block title %}Форма для чего-то{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 my">
            <div class="add-form">
                <div class="add-name">
                    <h2 class="add-name-text">Рубрика - "Автомобиль"</h2>
                </div>
                {{ form_start(form) }}
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.name) }}</label><br>
                    {{ form_widget(form.name) }}
                </div>
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.site) }}</label><br>
                    {{ form_widget(form.site) }}
                </div>
                <div class="form-group">
                    <label for="integer">{{ form_label(form.price) }}</label><br>
                    {{ form_widget(form.price) }}
                </div>
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.info) }}</label><br>
                    {{ form_widget(form.info) }}
                </div>
                <div class="form-group">
                    <label for="file">{{ form_label(form.image) }}</label><br>
                    {{ form_widget(form.image) }}
                </div>
                <input class="but-sub" type="submit" >

                {{ form_end(form) }}

                <form method="LINK" action="{{ path('auto') }}">
                    <input class = "but-glav" type="submit" value="Главная">
                </form>
            </div>
        </div>
    </div>
{% endblock %}